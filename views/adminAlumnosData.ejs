        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          
          <div class="container">
            <h4 class="mt-4">ALUMNOS</h4>
            <div class="input-group mb-2">
              <input type="text" id="searchDNI" class="form-control" placeholder="Buscar por DNI">
            </div>
            <p>Total de Alumnos registrados: <%= usuarios.filter(user => user.rol === "Estudiante").length %></p>
            <div class="table-responsive">
              <table class="table table-bordered table-hover">
                <thead>
                  <!-- ... (encabezado de la tabla) ... -->
                  <tr>
                    <th class="text-center" hidden>ID</th>
                    <th class="text-center">Nombre</th>
                    <th class="text-center">Apellido</th>
                    <th class="text-center">DNI</th>
                    <th class="text-center">Correo</th>
                   
                    <th class="text-center">Dirección</th>
                    <th class="text-center">Teléfono</th>
                    <th class="text-center">Acciones</th>
                </tr>
                </thead>
                <tbody>
                  <% usuarios.forEach((user) => { %>
                    <% if(user.rol === "Estudiante") { %>
                    <tr>
                      <td class="text-center" hidden><%= user.id %></td>
                      <td class="text-center"><%= user.nombre %></td>
                      <td class="text-center"><%= user.apellido %></td>
                      <td class="text-center"><%= user.dni %></td>
                      <td class="text-center"><%= user.correo %></td>
                      
                      <td class="text-center"><%= user.direccion %></td>
                      <td class="text-center"><%= user.telefono %></td>
                      <td class="text-center">
                        <a href="/reset-password/<%= user.id_usuario %>" class="btn btn-primary">Contraseña</a>
                        <a href="/editar-alumno/<%= user.id_usuario %>" class="btn btn-success">Editar</a>
                        <a href="/delete-alumno/<%= user.id_usuario %>" class="btn btn-danger">Eliminar</a>
                    </td>
                    </tr>
                       
                    
                    <% } %>
                 <% }) %>
                </tbody>
              </table>
            </div>
