        }
        nav {
            width: 100%;
            height: 70px;
            background-color: cornflowerblue;
            box-shadow: 2px 6px 19px 0px rgba(85, 85, 85, 0.5);
        }
        .main-content {
            margin-left: 0; /* Asegura que el contenido principal se ajuste al espacio del sidebar */
        }
        .table-responsive {
            max-height: 70vh; /* Limita la altura de la tabla */
            overflow-y: auto; /* Agrega scroll a la tabla si es necesario */
        }
        .azul{
      color: #007fff;
    }
       
    </style>
</head>
<body>
<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <a class="navbar-brand" href="#" style="font-weight: bold;">Panel admin</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            </ul>
            
        </div>
    </div>
</nav>
<div class="container-fluid">
    <div class="row">
        <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar" style="height: 100vh;">
            <div class="position-sticky pt-3">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <!-- ... (contenido del sidebar) ... -->
                        <li class="nav-item">
                          <a class="nav-link active" aria-current="page" href='./'>
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home" aria-hidden="true"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
                            Dashboard Inicio
                          </a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" href="./create-alumno">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus-circle" aria-hidden="true"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="8" x2="12" y2="16"></line><line x1="8" y1="12" x2="16" y2="12"></line></svg>
                            Crear Alumno
                          </a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" href="#">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-users" aria-hidden="true"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
                            Perfil usuario
                          </a>
                        </li>
                        
                       
              
                      <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>Otros</span>
                        
                       
                        </a>
                      </h6>
                      <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                          <a class="nav-link" href='/login'>
                            <i class="fa-solid fa-right-from-bracket" style="color: #2e7bff;" ></i>
                            Cerrar sesión
                          </a>
                        </li>
                       
                    </ul>
                </div>
            </div>
        </nav>
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
            <div class="container">
                <h4 class="mt-4">LISTADO DE ALUMNOS</h4>
                <div class="mb-4">
                    <input type="text" id="searchDNI" style="width:326px" class="form-control" placeholder="Buscar por DNI">
                </div>
                <p style="color: blue; border: 0px solid; border-radius: 10px; width: 300px; padding: 5px; background-color: rgba(95, 95, 248, 0.086);">Total de Alumnos registrados: <b><%= usuarios.filter(user => user.rol === "Estudiante").length %></b></p>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <!-- ... (encabezado de la tabla) ... -->
                            <tr>
                              <th class="text-center" hidden>ID</th>
                              <th class="text-center">Nombre</th>
                              <th class="text-center">Apellido</th>
                              <th class="text-center">DNI</th>
                              <th class="text-center">Correo</th>
                             
                              <th class="text-center">Dirección</th>
                              <th class="text-center">Teléfono</th>
                              <th class="text-center">Acciones</th>
                          </tr>
                        </thead>
                        <tbody>
                            <% usuarios.forEach((user) => { %>
                            <% if(user.rol === "Estudiante") { %>
                            <tr>
                                <td class="text-center" hidden><%= user.id %></td>
                                <td class="text-center"><%= user.nombre %></td>
                                <td class="text-center"><%= user.apellido %></td>
                                <td class="text-center"><%= user.dni %></td>
                                <td class="text-center"><%= user.correo %></td>
                                <td class="text-center"><%= user.direccion %></td>
                                <td class="text-center"><%= user.telefono %></td>
                                <td class="text-center">
                                    <a href="/reset-password/<%= user.id_usuario %>" class="btn btn-primary">Contraseña</a>
                                    <a href="/editar-alumno/<%= user.id_usuario %>" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="fa-solid fa-pen-to-square" style="color: #3cff00;"></i></a>
                                    <a href="" class="btn btn-danger" ><i class="fa-solid fa-trash" style="color: #8f150c;"></i></a>
                                </td>
                            </tr>
                            <% } %>
                            <% }) %>
                        </tbody>
                    </table>
                </div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Actualizar datos del alumno</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="col" style="padding: 20px;">
        <form class="needs-validation" action=" " method="POST"   novalidate>
          <input type="text" id="rol" name="rol" value="Estudiante" hidden>
          <div class="row g-3">
            <div class="col-sm-6">
              <i class="fa-solid fa-user"></i>  <label for="nombre"  class="form-label azul"> <b>Nombre</b> <span class="text-body-secondary">(*)</span></label>
              <input type="text" id="nombre" name="nombre" class="form-control"  placeholder="Ingrese nombre" value="" required>
              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>

            <div class="col-sm-6">
              <label for="apellido" class="form-label azul"><b>Apellido </b><span class="text-body-secondary">(*)</span></label>
              <input type="text" id="apellido" name="apellido" class="form-control" placeholder="Ingrese apellido" value="" required>
              <div class="invalid-feedback">
                Valid last name is required.
              </div>
            </div>
            <div class="col-md-12">
              <label type="date" id="fecha_nacimiento" name="fecha_nacimiento"  class="form-label azul"><b>Fecha de nacimiento </b><span class="text-body-secondary">(*)</span></label>
             
              <input  type="date" id="fecha_nacimiento" name="fecha_nacimiento" class="form-control" >
              <div class="invalid-feedback">
                Please select a valid state.
              </div>
            </div>
            <div class="col-12">
              <label for="dni" class="form-label azul"><b>Dni *</b> <span class="text-body-secondary">(*)</span></label>
              <input class="form-control" type="text" id="dni" name="dni" placeholder="Ingrese dni" value="" required>
              <div class="invalid-feedback">
                Valid last name is required.
              </div>
            </div>
            
            <div class="col-12">
              <i class="fa-solid fa-phone"></i>  <label for="telefono" class="form-label azul"> <b> Telefono</b> <span class="text-body-secondary">(*)</span></label>
              <input type="text" id="telefono" name="telefono" class="form-control"  placeholder="Ej: 11111111">
              <div class="invalid-feedback">
                Please enter a valid email address for shipping updates.
              </div>
            </div>

            <div class="col-12">
              <label for="correo" class="form-label azul"><b>Email</b> <span class="text-body-secondary">(*)</span></label>
              <input type="email" id="correo" name="correo" class="form-control" placeholder="you@example.com">
              <div class="invalid-feedback">
                Please enter a valid email address for shipping updates.
              </div>
            </div>

            <div class="col-12">
              <label for="contrasenia" class="form-label azul"><b>Contraseña</b></label>
              <input type="password" id="contrasenia" name="contrasenia" class="form-control"  placeholder="" required>
              <div class="invalid-feedback">
                Please enter your shipping address.
              </div>
            </div>

            <div class="col-12">
              <label for="direccion"class="form-label azul"><b>Direccion</b> <span class="text-body-secondary">(*)</span></label>
              <input type="text" id="direccion" name="direccion" class="form-control"  placeholder="Ingrese una Direccion">
            </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary">Actualizar</button>
      </div>
    </div>
  </div>
</div>

            </div>
        </main>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous">
</script>
<script>
    $(document).ready(function () {
        $('#searchDNI').on('input', function () {
            var searchTerm = $(this).val().trim();
            $('tbody tr').show().filter(function () {
                return $(this).find('td:eq(3)').text().indexOf(searchTerm) === -1;
            }).hide();
        });
    });
</script>
</body>
</html>
